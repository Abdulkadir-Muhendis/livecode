widget com.livecode.lcs_tests.core.engine_lcb.widget_resolvepath

use com.livecode.widget
use com.livecode.engine
private variable mPath as String
property testPath get mPath set SetPath

handler OnCreate()
	put "" into mPath
end handler

handler SetPath(in pPath as String)
	resolve file pPath relative to my script object
	put the result into mPath
end handler

end widget
